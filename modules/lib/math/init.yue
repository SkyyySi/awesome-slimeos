export clamp = (value, floor, ceiling) ->
	if value > ceiling
		ceiling
	elseif value < floor
		floor
	else
		value

const { floor: math_floor } = math
export round = (value) ->
	math_floor(value + 0.5)

export sum = (t) ->
	local result = 0

	for _, v in pairs(t)
		result += v

	result

export average = (t) ->
	local sumed = sum(t)

	sumed / #t
